{
  "compilerOptions": {
    "target": "es2017", // Veya daha yeni bir ECMAScript versiyonu
    "module": "esnext", // Veya "commonjs" projenizin yapısına göre (örneğin Node.js için "commonjs", modern frontend projeleri için "esnext")
    "moduleResolution": "node", // Node.js modül çözümleme stratejisini kullanır
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Çıktı dizini
    "rootDir": "./src" // Kaynak dosyalarınızın kök dizini (eğer varsa)
  },
  "include": [
    "src/**/*.ts" // Hangi dosyaların derleneceğini belirtir
  ],
  "exclude": [
    "node_modules" // Derleme dışı bırakılacak dizinler
  ]
}